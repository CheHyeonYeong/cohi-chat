<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- ========================================================= -->
    <!-- Global -->
    <!-- ========================================================= -->

    <!-- Maximum line length -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <!-- package / import line 예외 허용 -->
        <property name="ignorePattern"
                  value="^package.*|^import.*"/>
    </module>

    <module name="TreeWalker">

        <!-- ========================================================= -->
        <!-- Naming conventions -->
        <!-- ========================================================= -->

        <!-- Class / Interface / Enum -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Method -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Parameter (추가) -->
        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Field -->
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Local variable -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Static non-final variable (추가) -->
        <module name="StaticVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Constant (static final) -->
        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
        </module>

        <!-- ========================================================= -->
        <!-- Braces (K&R style) -->
        <!-- ========================================================= -->

        <!-- 여는 중괄호는 같은 줄 -->
        <module name="LeftCurly">
            <property name="option" value="eol"/>
        </module>

        <!-- 닫는 중괄호 - K&R 스타일 (수정) -->
        <module name="RightCurly">
            <property name="option" value="same"/>
            <property name="tokens" value="LITERAL_ELSE, LITERAL_CATCH, LITERAL_FINALLY"/>
        </module>

        <!-- 단독 닫는 중괄호 -->
        <module name="RightCurly">
            <property name="id" value="RightCurlyAlone"/>
            <property name="option" value="alone"/>
            <property name="tokens" value="CLASS_DEF, METHOD_DEF, CTOR_DEF, LITERAL_FOR, LITERAL_WHILE, STATIC_INIT, INSTANCE_INIT"/>
        </module>

        <!-- ========================================================= -->
        <!-- Import rules -->
        <!-- ========================================================= -->

        <!-- Unused import 금지 -->
        <module name="UnusedImports"/>

        <!-- Wildcard import 금지 -->
        <module name="AvoidStarImport"/>

        <!-- ========================================================= -->
        <!-- Javadoc (존재 여부 검사 추가) -->
        <!-- ========================================================= -->

        <!-- public 메서드 Javadoc 존재 검사 -->
        <module name="JavadocMethod">
            <property name="accessModifiers" value="public"/>
            <property name="validateThrows" value="false"/>
            <property name="allowMissingParamTags" value="true"/>
            <property name="allowMissingReturnTag" value="true"/>
        </module>

        <!-- public 타입 Javadoc 존재 검사 -->
        <module name="JavadocType">
            <property name="scope" value="public"/>
        </module>

        <!-- Javadoc 스타일 검사 -->
        <module name="JavadocStyle">
            <property name="checkFirstSentence" value="false"/>
        </module>

    </module>
</module>